<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.neil.dailyzhihu">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_dailyzhihu"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.aty.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--<activity-->
        <!--android:name=".ui.aty.MainActivity"-->
        <!--android:label="@string/app_name"-->
        <!--android:theme="@style/AppTheme.NoActionBar"/>-->
        <activity
            android:name=".ui.aty.StoryActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.aty.ThemeActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neil.dailyzhihu.ui.aty.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.aty.SectionActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neil.dailyzhihu.ui.aty.MainActivity"/>
        </activity>
    </application>
</manifest>