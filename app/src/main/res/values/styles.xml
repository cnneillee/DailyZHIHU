<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="defaultTextColor">@color/asGray</item>
        <item name="rootViewBgColor">@color/white</item>
        <item name="cardViewBgColor">@color/lightWhite</item>
        <item name="cardViewTextTitleColor">@color/black</item>
        <item name="cardViewTextExtraColor">@color/mediumGray</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DayTimeModeTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/zhihuBlue</item>
        <item name="colorPrimaryDark">@color/zhihuBlueDark</item>
        <item name="colorAccent">@color/zhihuGreen</item>

        <item name="defaultTextColor">@color/asGray</item>
        <item name="rootViewBgColor">@color/white</item>
        <item name="cardViewBgColor">@color/lightWhite</item>
        <item name="cardViewTextTitleColor">@color/black</item>
    </style>

    <style name="NightTimeModeTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/Darken</item>
        <item name="colorAccent">@color/zhihuBlue</item>

        <item name="android:textColor">#DBDBDB</item>
        <item name="android:textColorHighlight">#F9E81E</item>
        <item name="android:textColorLink">#242F67</item>
        <item name="android:textColorHint">#DBDBDB</item>

        <item name="cardViewBgColor">#323232</item>
        <item name="cardViewTextTitleColor">#61809E</item>
        <item name="defaultTextColor">#DBDBDB</item>
        <item name="rootViewBgColor">@color/Darken</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
