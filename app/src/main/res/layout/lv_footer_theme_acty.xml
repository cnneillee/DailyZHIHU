<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_loading_editor"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="?attr/btnBgColor"
        android:clickable="false"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="6dp"
        android:text="点击加载编辑信息"
        android:textColor="?attr/supportTitleColor"
        android:textSize="13sp"/>

    <LinearLayout
        android:id="@+id/ll_editorLVWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/lv_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/btn_bg_color"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="6dp"
            android:text="没有内容了！啦啦啦~~~"
            android:textColor="?attr/supportTitleColor"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>