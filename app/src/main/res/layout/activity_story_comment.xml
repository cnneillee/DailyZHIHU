<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/sectionRootViewBgColor"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/barBgColor"
        android:fitsSystemWindows="true"
        android:minHeight="?actionBarSize"
        app:subtitle="@string/long_comment"
        app:subtitleTextColor="?attr/barSubTitleColor"
        app:titleTextColor="?attr/barTitleColor"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>