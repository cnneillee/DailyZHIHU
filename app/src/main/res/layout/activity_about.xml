<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/prefRootViewBgColor"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/barBgColor"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="?attr/barTitleColor"/>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/fl_about_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_copyright_info"
            android:textColor="?attr/supportDescColor"/>
    </LinearLayout>

</LinearLayout>