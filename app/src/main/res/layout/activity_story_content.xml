<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/osv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--header图片-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_progressing_hourglass" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="left"
                        android:text="深夜惊奇 · 朋友圈错觉"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_imgSource"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="图片：Yestone.com 版权图片库"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_storyExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/zhihuBlue"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="长评论: 0  点赞: 161  短评论: 19  评论总数: 19"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <!--<Button-->
                <!--android:id="@+id/btn_getLongComments"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="3dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@color/zhihuBlue"-->
                <!--android:text="获取长评论"-->
                <!--android:textColor="@color/white" />-->

                <!--<Button-->
                <!--android:id="@+id/btn_getShortComments"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="3dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@color/zhihuBlue"-->
                <!--android:text="获取短评论"-->
                <!--android:textColor="@color/white" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <WebView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    <!--评论fab-->
    <com.neil.dailyzhihu.ui.FloatingActionsMenuHidable
        android:id="@+id/detailed_multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/icons"
        fab:fab_addButtonColorPressed="@color/divider"
        fab:fab_addButtonPlusIconColor="#808080"
        fab:fab_labelStyle="@style/menu_labels_style">

        <!--ic_share_grey600_36dp-->
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_getLongComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/icons"
            fab:fab_colorPressed="@color/divider"
            fab:fab_icon="@drawable/ic_fab_star"
            fab:fab_title="长评论" />

        <!--ic_favorite_grey600_24dp-->
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_getShortComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/icons"
            fab:fab_colorPressed="@color/divider"
            fab:fab_icon="@drawable/ic_fab_star"
            fab:fab_title="短评论" />
        <!--//ic_settings_grey600_24dp-->
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/detailed_action_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/icons"
            fab:fab_colorPressed="@color/divider"
            fab:fab_icon="@drawable/ic_fab_star"
            fab:fab_title="设置" />
    </com.neil.dailyzhihu.ui.FloatingActionsMenuHidable>

</RelativeLayout>